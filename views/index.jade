head
    title まこちゃん管理画面
    link(rel='stylesheet', href='/stylesheets/style.css')
body
    div(align='center')
        h3 管理画面
        p
            case m_stat
                when '0'
                    input(type="button",value='メガネ中', onClick="location.href='/status/update/'")
                when '1'
                    input(type="button",value='とりはずし中', onClick="location.href='/status/update/'")
        p
            input(type="button",value='新規作成',onClick="location.href='/keyword/new'",target='list')
                新規作成
        table.tbh
            tr
                th.kw キーワード1
                th.kw キーワード2
                th.kw キーワード3
                th.ans 回答
                th.face 表情
                th.ed 
                th.sc 
        iframe#list(src='/keyword/list',width='80%',height='100%',frameborder='no',marginwidth='0',marginheight='0') 